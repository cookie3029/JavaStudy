package day13;

// 2. Runnable 인터페이스 구현하는 방식
class TimeRunnable implements Runnable {
	int n = 0;
	
	@Override
	public void run() {
		while(true) {
			n++;
			System.out.println(n);
			try {
				Thread.sleep(1000);
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}	
}

public class ThEx04 {
	public static void main(String[] args) {

	}
}
