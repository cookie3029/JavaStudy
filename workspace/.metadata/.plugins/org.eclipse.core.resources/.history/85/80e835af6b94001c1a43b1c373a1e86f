package day13;

class TimerThread extends Thread {
	int n = 0;

	@Override
	public void run() {
		while (true) {
			n++;
			System.out.println(n);
			
			try {
				sleep(1000);
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
	}
}

public class ThEx01 {
	public static void main(String[] args) {

	}
}
